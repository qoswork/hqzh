<?xml version="1.0" encoding="UTF-8"?>

<Covalent.DBSetup name="common-dbsetup-typemap.xml" notice="DBSetup, Copyright (C) 2002, Covalent Technologies, Inc., All Rights Reserved.">

<!--
  This file defines the DBSetup typemaps that should be used
  by any subsystem-specific DBSetup files.
-->

    <mapping>
        <typemap type="INTEGER">
            <map db="oracle" type="INTEGER" />
            <map db="pointbase" type="INTEGER" />
            <map db="postgres" type="INTEGER" />
            <map db="java" type="INTEGER" />
            <map db="mysql" type="INTEGER" />
        </typemap>
        <typemap type="LONG">
            <map db="cloudscape" type="LONGINT" />
            <map db="oracle" type="NUMBER(19,0)" />
            <map db="pointbase" type="BIGINT" />
            <map db="postgres" type="BIGINT" />
            <map db="java" type="BIGINT" />
            <map db="mysql" type="BIGINT" />
        </typemap>
        <typemap type="BIGDEC">
            <map db="cloudscape" type="NUMERIC(24,5)" />
            <map db="oracle" type="NUMBER(24,5)" />
            <map db="pointbase" type="NUMERIC(24,5)" />
            <map db="postgres" type="NUMERIC(24,5)" />
            <map db="java" type="DOUBLE" />
            <map db="mysql" type="NUMERIC(24,5)" />
        </typemap>
         <typemap type="VARCHAR2">
            <map db="cloudscape" type="VARCHAR" />
            <map db="oracle" type="VARCHAR2" />
            <map db="pointbase" type="VARCHAR" />
            <map db="postgres" type="CHARACTER VARYING" />
            <map db="java" type="VARCHAR" />
            <map db="mysql" type="VARCHAR" />
        </typemap>
        <typemap type="CHAR">
            <map db="oracle" type="CHAR" />
            <map db="pointbase" type="CHARACTER" />
            <map db="postgres" type="CHARACTER" />
            <map db="java" type="CHAR" />
            <map db="mysql" type="CHAR" />
        </typemap>
        <typemap type="DOUBLE">
            <map db="oracle" type="FLOAT(126)" />
            <map db="pointbase" type="FLOAT(15)" />
            <map db="postgres" type="FLOAT8" />
            <map db="java" type="FLOAT" />
            <map db="mysql" type="DOUBLE" />
        </typemap>
        <typemap type="BOOLEAN">
            <map db="postgres" type="BOOLEAN" />
            <map db="oracle" type="NUMBER(1)"/>
            <map db="pointbase" type="BOOLEAN" />
            <map db="java" type="BOOLEAN" />
            <map db="mysql" type="BIT" />
        </typemap>
        <typemap type="BYTES">
            <map db="postgres" type="BYTEA" />
            <map db="oracle" type="BLOB"/>
            <map db="pointbase" type="BLOB(16K)" />
            <map db="java" type="BLOB" />
            <map db="mysql" type="BLOB" />
        </typemap>
        <typemap type="BLOB">
            <map db="postgres" type="BYTEA" />
            <map db="oracle" type="BLOB"/>
            <map db="pointbase" type="BLOB(16K)" />
            <map db="java" type="BLOB" />
            <map db="mysql" type="BLOB" />
        </typemap>
        <typemap type="CLOB">  
            <map db="oracle" type="CLOB"/>
            <map db="pointbase" type="CLOB(100K)"/>
            <map db="java" type="CLOB" />
            <map db="mysql" type="TEXT" />
        </typemap>
    </mapping>

</Covalent.DBSetup>
